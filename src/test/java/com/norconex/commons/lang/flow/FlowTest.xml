<xml>
  <!--
    <condition> tags without "class" attribute are using XMLFlow default 
    predicate type, which is for this test "PropertyMatcherCondition".
    -->
<thisIsTheFlow>
    
  <if>
    <allOf>
      <condition class="com.norconex.commons.lang.flow.mock.MockPropertyMatcherCondition">
        <configuration>
          <propertyMatcher>
            <fieldMatcher>car</fieldMatcher>
            <valueMatcher>volvo</valueMatcher>
          </propertyMatcher>
        </configuration>
      </condition>
      <condition class="MockPropertyMatcherCondition">
        <configuration>
          <propertyMatcher>
            <fieldMatcher>car</fieldMatcher>
            <valueMatcher>volvo</valueMatcher>
          </propertyMatcher>
        </configuration>
      </condition>
    </allOf>
    <then>
      <handler class="MockUppercaseConsumer">
        <field>firstName</field>
      </handler>
    </then>
    <else>
      <handler class="MockUppercaseConsumer">
        <field>lastName</field>
      </handler>
    </else>
  </if>

